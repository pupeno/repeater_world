<% content_for :head_title, "Repeater World - Your open source & open data ham radio repeater repository" %>
<% content_for :meta_description, "Helps you find your local repeaters and easily export them to your radio. All source code and all data is free and open for everyone to use." %>

<div class="grow w-full px-1 flex flex-col"
     data-controller="repeater-searches">
  <%= render "shared/flash_messages" %>

  <div class="<%= @results.nil? ? "flex-1" : "" %> grid place-items-center">
    <%= render "form",
               repeater_search: @repeater_search,
               search_rl: search_url,
               save_url: repeater_searches_url,
               save_method: "post" %>
  </div>
  <%= render "repeater_list", results: @results %>
</div>
