<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="mt-6 text-center text-3xl font-extrabold">Change your password</h1>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="py-8 px-4 shadow sm:rounded-lg sm:px-10 border border-gray-200">
      <%= render "shared/flash_messages" %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "shared/forms/error_summary", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div>
          <%= f.label :password, "New password", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password,
                                 autofocus: true,
                                 autocomplete: "new-password",
                                 class: "field-text block max-w-lg sm:max-w-sm w-full"%>
            <% resource.errors.where(:password).each do |error| %>
              <p class="mt-2 text-red-600 dark:text-red-300"><%= error.full_message %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation,
                                 autocomplete: "new-password",
                                 class: "field-text block max-w-lg sm:max-w-sm w-full" %>
            <% resource.errors.where(:password_confirmation).each do |error| %>
              <p class="mt-2 text-red-600 dark:text-red-300"><%= error.full_message %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit "Change password",
                       class: "w-full button bg-fucsia-500
                               outline-fucsia-600
                               dark:outline-fucsia-400
                               hover:bg-fucsia-600
                               dark:hover:bg-fucsia-400
                               focus:bg-fucsia-600
                               dark:focus:bg-fucsia-400" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>
