<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Sign up</h1>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 border border-gray-200">
      <%= render "shared/flash_messages" %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { "data-turbo": "false", novalidate: true, class: "space-y-6" }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ["field-text", resource.errors.where(:email).any? ? "field-text-invalid" : "field-text-valid"] %>
            <% resource.errors.where(:email).each do |error| %>
              <p class="mt-2 text-sm text-red-600"><%= error.full_message %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "new-password", class: ["field-text", resource.errors.where(:password).any? ? "field-text-invalid" : "field-text-valid"] %>
            <% resource.errors.where(:password).each do |error| %>
              <p class="mt-2 text-sm text-red-600"><%= error.full_message %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ["field-text", resource.errors.where(:password_confirmation).any? ? "field-text-invalid" : "field-text-valid"] %>
            <% resource.errors.where(:password_confirmation).each do |error| %>
              <p class="mt-2 text-sm text-red-600"><%= error.full_message %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
