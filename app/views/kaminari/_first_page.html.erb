<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.first? %>
  <span class="pt-4 px-4
               border-t-2 border-transparent
               inline-flex items-center
               font-medium text-gray-300 dark:text-gray-600">
      <i class="fa-solid fa-angles-left"></i>
      <span class="sm:ml-2 sr-only sm:not-sr-only sm:block">First</span>
    </span>
<% else %>
  <%= link_to url, remote: remote,
              class: "pt-4 px-4
                      border-t-2 border-transparent
                      inline-flex items-center
                      font-medium
                      text-gray-500 dark:text-gray-400
                      hover:text-gray-800 hover:border-gray-300 dark:hover:text-gray-200 hover:border-gray-500
                      focus:outline outline-2 outline-orange-600
                      focus:text-gray-800 focus:border-gray-300
                      dark:focus:text-gray-200 dark:focus:border-gray-500" do %>
    <i class="fa-solid fa-angles-left"></i>
    <span class="sm:ml-2 sr-only sm:not-sr-only sm:block">First</span>
  <% end %>
<% end %>
