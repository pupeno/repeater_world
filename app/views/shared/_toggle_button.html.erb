<%# The style here needs to be kept in sync with _toggle_like_button.html.erb %>
<%= form.label name,
               class: "inline-flex
                       mx-1 py-3 px-3
                       rounded-md
                       text-sm font-semibold
                       focus:outline-none
                       ring-1 ring-inset ring-orange-300 bg-white text-gray-900 hover:bg-orange-50
                       #{local_assigns[:class]}",
               data: { controller: "toggle-button", **data } do %>
  <%= form.check_box name,
                     class: "sr-only",
                     aria: { labelledby: "#{name}-actual-label" },
                     data: { action: "change->toggle-button#updateStyle" } %>
  <span id="<%= "#{name}-actual-label" %>"><%= label %></span>
<% end %>
