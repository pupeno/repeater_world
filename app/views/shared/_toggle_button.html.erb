<%# The style here needs to be kept in sync with _toggle_like_button.html.erb %>
<%= form.label name,
               class: "inline-flex
                       mx-1 py-2 px-3
                       bg-white
                       text-gray-900 font-semibold
                       rounded-md
                       border border-orange-500
                       ring-0 ring-orange-500
                       outline-2 outline-offset-2 outline-orange-600
                       hover:bg-orange-50
                       focus-within:outline-dotted focus-within:bg-orange-50
                       #{local_assigns[:class]}",
               data: { controller: "toggle-button", **data } do %>
  <%= form.check_box name,
                     class: "sr-only",
                     aria: { labelledby: "#{name}-actual-label" },
                     data: { action: "change->toggle-button#updateStyle" } %>
  <span id="<%= "#{name}-actual-label" %>"><%= label %></span>
<% end %>
