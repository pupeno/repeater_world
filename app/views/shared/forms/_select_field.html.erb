<div>
  <%= form.label field_name, label, class: "block font-medium" %>
  <div class="mt-2">
    <%= form.select field_name,
                    choices,
                    options,
                    input_html_options.deep_merge({ class: [
                      input_html_options[:class],
                      "block w-full py-1.5 sm:max-w-xs
                       rounded-md border border-gray-300 dark:border-gray-600
                       focus:outline-2 focus:outline-offset-0 focus:outline-orange-500 focus:border-orange-500
                       chevron-gray-700 dark:chevron-gray-300"] }) %>

    <% if help_text.present? %>
      <p class="mt-3 text-gray-500 dark:text-gray-400"><%= help_text %></p>
    <% end %>
    <% form.object.errors.where(field_name).each do |error| %>
      <p class="mt-2 text-red-600 dark:text-red-300"><%= error.full_message %></p>
    <% end %>
  </div>
</div>
