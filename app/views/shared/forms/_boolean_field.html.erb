<div>
  <%= form.label field_name, label, class: "block font-medium" %>
  <div class="mt-2">
    <div class="sm:mt-px sm:pt-2 flex flex-row">
      <%= form.check_box field_name,
                         input_html_options
                           .deep_merge({ class: [input_html_options[:class], "field-boolean"] }) %>
      <%= form.label field_name, second_label, class: "ml-2 block" %>
    </div>
    <% if help_text.present? %>
      <p class="mt-3 text-gray-500 dark:text-gray-400"><%= help_text %></p>
    <% end %>
    <% form.object.errors.where(field_name).each do |error| %>
      <p class="mt-2 text-red-600 dark:text-red-300"><%= error.full_message %></p>
    <% end %>
  </div>
</div>
