<% if resource.errors.any? %>
  <div id="error_explanation" class="mx-1 mb-2 px-3 py-2
                                     bg-red-50 dark:bg-red-900/25
                                     text-red-500 dark:text-red-200
                                     rounded-lg">
    <h2>
      Encountered <%= pluralize(resource.errors.count, "error") %>:
    </h2>

    <ul class="list-disc list-inside">
      <% resource.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
