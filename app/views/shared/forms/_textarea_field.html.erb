<div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-b sm:border-gray-200 py-3 sm:py-5">
  <%= form.label field_name, label, class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
  <div class="mt-1 sm:col-span-2 sm:mt-0">
    <%= form.text_area field_name,
                       **{ rows: 4 }
                         .deep_merge(input_html_options)
                         .deep_merge({ class: [input_html_options[:class], "field-textarea", form.object.errors.where(field_name).any? ? "field-textarea-invalid" : "field-textarea-valid"] }) %>
    <% if help_text.present? %>
      <p class="mt-2 text-sm text-gray-500"><%= help_text %></p>
    <% end %>
  </div>
</div>
