<header class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-3
            sm:flex sm:items-center sm:justify-between">
  <% if local_assigns[:title] %>
    <div class="flex-1 min-w-0">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate"><%= title %></h1>
    </div>
  <% end %>
  <% if local_assigns[:head_title] %>
    <% content_for :head_title, head_title %>
  <% elsif local_assigns[:title] %>
    <% content_for :head_title, title %>
  <% end %>
  <div class="mt-4 sm:mt-0 sm:ml-4
              flex gap-2">
    <%= yield %>
  </div>
</header>
