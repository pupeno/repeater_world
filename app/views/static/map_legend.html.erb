<%= render "shared/page_header", title: "Map Legend" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <%= render "shared/flash_messages" %>
  <div class="shadow-sm ring-1 ring-black ring-opacity-5">
    <table class="min-w-full border-separate" style="border-spacing: 0">
      <thead class="<%= TableHelper::THEAD_CLASSES %>">
        <tr>
          <th scope="col" class="<%= TableHelper::TH_CLASSES %>">
            Band
          </th>
          <% RepeaterSearch::MODES_AND_MULTI.each do |mode| %>
            <th scope="col" class="<%= TableHelper::TH_CLASSES %>">
              <%= mode[:label] %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% RepeaterSearch::BANDS.each_with_index do |band, index| %>
          <tr class="<%= index.even? ? "" : "bg-gray-100 dark:bg-gray-800" %>">
            <td class="<%= TableHelper::TD_CLASSES %>">
              <%= band[:label] %>
            </td>
            <% RepeaterSearch::MODES_AND_MULTI.each do |mode| %>
              <td class="<%= TableHelper::TD_CLASSES %> text-center">
                <%= image_tag("map_markers/marker-#{band[:symbol]}-#{mode[:symbol]}.svg", style: "width: 30px", class: "inline-block") %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
