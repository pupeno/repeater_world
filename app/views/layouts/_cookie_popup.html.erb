<div data-controller="cookie-popup"
     class="hidden
            z-50 sticky bottom-0 left-0 right-0
            bg-orange-100 border-l-4 border-orange-700 p-4 my-4
            flex items-center justify-center">
  <div class="w-full p-5 lg:px-24
              opacity-90">
    <div class="md:flex items-center">
      <div class="md:flex-1 px-3 mb-5 md:mb-0">
        <p class="text-center md:text-left text-sm leading-tight md:pr-12">
          We and selected partners and related companies, use cookies and similar technologies as specified in our
          <%= link_to "Cookie Policy", cookie_policy_url %>. You agree to consent to the use of
          these technologies by clicking Accept Cookies, or by continuing to browse this website.
        </p>
      </div>
      <div class="px-3 text-center">
        <button data-action="click->cookie-popup#acceptCookies"
                class="py-2 px-4
                       border border-transparent rounded-md shadow-sm
                       text-sm font-medium text-white
                       bg-orange-600
                       hover:bg-orange-700
                       focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
          Accept Cookies
        </button>
      </div>
    </div>
  </div>
</div>
