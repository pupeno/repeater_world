<%# top_bar_mobile_menu should have the same items as top_bar_desktop_menu+top_bar_extra_menu %>
<%= top_bar_desktop_extra_link "https://github.com/pupeno/repeater_world/discussions" do %>
  <i class="fa-solid fa-bell-concierge mr-2"></i>
  Support
<% end %>
<%= top_bar_desktop_extra_link new_user_session_url do %>
  <i class="fa-solid fa-right-to-bracket mr-2"></i>
  Log in
<% end unless user_signed_in? %>
<%= top_bar_desktop_extra_link repeater_searches_url do %>
  <i class="fa-solid fa-magnifying-glass mr-2"></i>
  My Searches
<% end if user_signed_in? %>
<%= top_bar_desktop_extra_link edit_profile_url do %>
  <i class="fa-solid fa-user mr-2"></i>
  My Profile
<% end if user_signed_in? %>
<%= top_bar_desktop_extra_link edit_user_registration_path do %>
  <i class="fa-solid fa-key mr-2"></i>
  Change My Password
<% end if user_signed_in? %>
<%= button_to destroy_user_session_path, class: top_bar_desktop_extra_button_class, method: :delete do %>
  <i class="fa-solid fa-right-from-bracket mr-2"></i>
  Log out
<% end if user_signed_in? %>
